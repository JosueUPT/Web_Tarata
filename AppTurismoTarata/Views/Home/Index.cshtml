                                    <!-- JavaScript -->
                                    <script>// Datos de los puntos de interés para cada imagen
                                        const puntosDeInteresData = [
                                            ["🗺️ Plaza Coronel Gregorio Albarracín", "Horario: 9:00 AM - 6:00 PM", "Costo: Gratis"],
                                            ["⛪ Templo San Benedicto", "Horario: 8:00 AM - 5:00 PM", "Costo: Gratis"],
                                            ["🛒 Mercado Central", "Horario: 7:00 AM - 8:00 PM", "Costo: Gratis"],
                                            ["🏛️ Municipalidad Provincial de Tarata", "Horario: 8:00 AM - 4:00 PM", "Costo: Gratis"]
                                        ];

                                        // Elemento de la lista de puntos de interés
                                        const listaInteres = document.getElementById("listaInteres");

                                        // Función para actualizar los puntos de interés
                                        function actualizarPuntosDeInteres(index) {
                                            // Limpiar la lista actual
                                            listaInteres.innerHTML = "";
                                            // Obtener los puntos de interés del índice actual
                                            const puntos = puntosDeInteresData[index];
                                            // Crear elementos de lista para cada punto de interés
                                            puntos.forEach(punto => {
                                                const li = document.createElement("li");
                                                li.textContent = punto;
                                                listaInteres.appendChild(li);
                                            });
                                        }

                                        // Escuchar el evento 'slide.bs.carousel' para detectar el cambio de imagen
                                        const carousel = document.getElementById("carouselExampleIndicators");
                                        carousel.addEventListener("slide.bs.carousel", event => {
                                            actualizarPuntosDeInteres(event.to);
                                        });

                                        // Inicializar con la primera imagen
                                        actualizarPuntosDeInteres(0);
                                    </script>




