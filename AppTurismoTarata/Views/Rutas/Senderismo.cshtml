@model IEnumerable<AppTurismoTarata.Models.DetalleRuta>
@{
    var img = Url.Content("~/Sources/assets/img/lugares/accesotarata/plaza.jpg");
    var nombre = "Senderismo";
    var descripcion = "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum i";
}
<div class="container-fluid px-0">
    <!-- Hero Section -->
    <section class="hero-section position-relative text-center text-white">
        <img src="@img" alt="Background Image" class="w-100 hero-img">
        <div class="hero-text position-absolute top-50 start-50 translate-middle">
            <h1 class="display-3 fw-bold">@nombre</h1>
            <p class="mt-3 mb-4">@descripcion</p>
            <a href="#" class="btn btn-danger px-4">Conócenos</a>
        </div>
    </section>

    <!-- Destacados Section -->
    <section class="destacados py-5">
        <div class="container">
            <div class="row">
                @foreach (var lugar in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <!-- Imagen del lugar (puedes cambiar el src para usar imágenes dinámicas si tienes URLs) -->
                            <img src="https://via.placeholder.com/600x400" class="card-img-top" alt="@lugar.nombre">
                            <div class="card-body text-center">
                                <!-- Título de la ruta -->

                                <h3>@lugar.nombre</h3>
                                <!-- Descripción del lugar -->
                                <p>@lugar.Descripcion</p>
                                <!-- Costo y horario del lugar -->
                                <p>Precio: @lugar.costo</p>
                                @*<p>Precio: @lugar.costo.ToString("C")</p>*@
                                <p>Horario: @lugar.Horario</p>
                                <!-- Botón para más detalles (puedes ajustar el enlace según tu lógica) -->
                                <a href="#" class="btn btn-danger">Seleccionar opciones</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>
</div>
